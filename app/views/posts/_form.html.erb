<div class="row">
  <div class="col-4" style="margin-top:6px">
    <img src="<%= @item.image.url %>">
  </div>
  <div class="col-8">
    <%= form_for(@post) do |f| %>
      <div class="container" style="margin-top:10px">
          <div class="form-group field ">
            <%= f.label :"제목"%><br>
            <%= f.text_field :title, :class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :"내용" %><br>
            <%= f.text_area :content, :class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :"비밀번호" %><br>
            <%= f.text_field :psw, :class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :"이미지 첨부" %><br>
            <%= f.file_field :image %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
        <%= link_to '뒤로가기', :back %>
      </div>
    </div>
</div>