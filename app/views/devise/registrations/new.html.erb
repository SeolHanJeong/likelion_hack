<div class="row" style="margin-top:50px;">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h3 class="text-center">회원가입</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <strong>아이디</strong><%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Id(사용 할 이메일 입력)" %>
      </div>

      <div class="form-group">
        <strong>패스워드</strong>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '6자리 이상' %>
      </div>

      <div class="form-group">
        <strong>패스워드 확인</strong>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: '비밀번호 확인' %>
      </div>

      <div class="form-group">
        <%= f.submit "회원가입", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
